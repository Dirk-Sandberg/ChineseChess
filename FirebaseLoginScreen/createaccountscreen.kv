#:import random random
#:import string string

<CreateAccountScreen>:
    FloatLayout:
        MDIconButton:
            #size_hint: .4, .05
            pos_hint: {"center_x": .1, "top": .975}
            text: "Back"
            icon: 'chevron-left'
            markup: True
            #bg_color: root.parent.parent.primary_color if root.parent else (0,0,0,1)
            #color: root.parent.parent.secondary_color if root.parent else (0,0,0,1)
            on_release:
                root.parent.transition = SlideTransition(direction="right")
                root.parent.current = root.parent.current = "welcome_screen"
                root.parent.transition = SlideTransition(direction="left")

        MDTextField:
            text: ''.join(random.choice(string.ascii_uppercase + string.digits) for _ in range(6)) + "@gmail.com"
            id: email
            size_hint_x: .9
            pos_hint: {"center_x": .5, "top": .875}
            hint_text: "Email"
            color_mode: 'custom'
            line_color_focus: 1,1,1,1


        MDTextField:
            text: ''.join(random.choice(string.ascii_uppercase + string.digits) for _ in range(6))
            id: password
            size_hint_x: .9
            pos_hint: {"center_x": .5, "top": .775}
            hint_text: "Password"
            icon: 'lock-outline'
            password: True
            color_mode: 'custom'
            line_color_focus: 1,1,1,1

        MDRaisedButton:
            text: "Create Account"
            #size_hint: .4 ,.05
            pos_hint: {"center_x": .5, "top": .67}
            #bg_color: root.parent.parent.primary_color if root.parent else (0,0,0,1)
            #color: root.parent.parent.secondary_color if root.parent else (0,0,0,1)
            on_release:
                # Need to refer to the FirebaseLoginScreen
                root.parent.parent.sign_up(email.text, password.text)
                Animation(opacity=0, duration=0.5).start(message)
                sign_in_button.opacity = 0
                sign_in_button.disabled = True
                root.parent.parent.display_loading_screen()

        ThemedMessage:
            id: message
            size_hint: .9 ,.1
            pos_hint: {"center_x": .5, "center_y": .1}
            opacity: 0
            on_text:
                Animation(opacity=1, duration=0.5).start(self)

        MDRaisedButton:
            id: sign_in_button
            text: "Sign in"
            size_hint: .2 ,.05
            pos_hint: {"right": .85, "center_y": .1}
            opacity: 0
            disabled: True
            on_release:
                root.parent.current = "sign_in_screen"
                root.parent.parent.ids.sign_in_screen.ids.email.text = email.text
                root.parent.parent.ids.sign_in_screen.ids.password.text = password.text


