<LobbyScreen>:
    BoxLayout:
        orientation: 'vertical'
        MDIconButton:
            icon: 'chevron-left'
            on_release:
                root.back_to_lobby_browser()
        MDLabel:
            id: player_one
            text: ""
        MDLabel:
            id: player_two
            text: "Waiting for someone to join..."

        CardButton:
            text: "Start Match"
            disabled: True if player_two.text == "Waiting for someone to join..." else False
            on_release:
                root.start_match()