<LobbyScreen>:
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            left_action_items: [['chevron-left', lambda x: root.back_to_lobby_browser()]]
            title: "Waiting for an opponent..."
            md_bg_color: get_color_from_hex(colors['Light']['Background'])
            elevation: 0
            specific_text_color: [0,0,0,1]
        MDCard:
            size_hint: .6, None
            pos_hint: {"center_x": .5}
            height: self.width
            MDLabel:
                id: player_one
                text: ""
        MDCard:
            pos_hint: {"center_x": .5}
            size_hint: .6, None
            height: self.width
            MDLabel:
                id: player_two
                text: "Waiting for an opponent..."

        CardButton:
            text: "Start Match"
            disabled: True if player_two.text == "Waiting for an opponent..." else False
            on_release:
                root.start_match()