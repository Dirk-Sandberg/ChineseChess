<LobbyScreen>:
    BoxLayout:
        padding: 0, 0, 0, dp(20)
        orientation: 'vertical'
        Widget:
            size_hint: None, None
            height: app.notch_height
        MDToolbar:
            id: toolbar
            left_action_items: [['chevron-left', lambda x: root.back_to_lobby_browser()]]
            right_action_items: [['theme-light-dark', lambda x: app.change_style()]]
            title: "Waiting for opponent"
            md_bg_color: get_color_from_hex(colors[app.theme_cls.theme_style]['Background'])
            elevation: 0
            specific_text_color: [0,0,0,1] if app.theme_cls.theme_style == 'Light' else [1,1,1,1]
        Widget:
        BoxLayout:
            size_hint_y: None
            height: self.minimum_height
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(5)
                Image:
                    size_hint: None, None
                    keep_ratio: False
                    allow_stretch: True
                    source: "images/kingpiecered.png"
                    pos_hint: {"center_x": .5}
                    width: 2 * root.width / 9
                    height: self.width
                MDLabel:
                    size_hint_y: None
                    height: self.texture_size[1]
                    id: player_one
                    text: " "
                    halign: 'center'
                    opposite_colors: toolbar.opposite_colors
                    theme_text_color: 'Custom'
                    text_color: toolbar.specific_text_color
                MDLabel:
                    size_hint_y: None
                    height: self.texture_size[1]
                    id: player_one_elo
                    text: " "
                    halign: 'center'
                    opposite_colors: toolbar.opposite_colors
                    theme_text_color: 'Custom'
                    text_color: toolbar.specific_text_color
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(5)
                Image:
                    size_hint: None, None
                    keep_ratio: False
                    allow_stretch: True
                    id: player_two_image
                    source: "images/blankpiece.png"
                    pos_hint: {"center_x": .5}
                    width: 2 * root.width / 9
                    height: self.width
                MDLabel:
                    size_hint_y: None
                    height: self.texture_size[1]
                    id: player_two
                    text: " "
                    halign: 'center'
                    opposite_colors: toolbar.opposite_colors
                    theme_text_color: 'Custom'
                    text_color: toolbar.specific_text_color
                MDLabel:
                    size_hint_y: None
                    height: self.texture_size[1]
                    id: player_two_elo
                    text: " "
                    halign: 'center'
                    opposite_colors: toolbar.opposite_colors
                    theme_text_color: 'Custom'
                    text_color: toolbar.specific_text_color
        Widget:
        CardButton:
            text: "Start Match"
            size_hint: .6, None
            height: self.width
            pos_hint: {"center_x": .5}
            disabled: True if toolbar.title == "Waiting for opponent" else False
            background: 'images/start_game.jpg'
            on_release:
                root.start_match(app.player.time_limit)
