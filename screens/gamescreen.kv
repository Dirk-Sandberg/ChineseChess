#:import Clock kivy.clock.Clock

<GameScreen>:
    #on_enter:
    #    Clock.schedule_once(top_halfboard.foo, 3)
    BoxLayout:
        orientation: 'vertical'
        Widget:
        FloatLayout:
            size_hint: 1, None
            height: self.width
            pos_hint: {"center_y": .5, "center_x": .5}
            BoxLayout:
                pos_hint: {"center_x": .5, "center_y": .5}
                padding: dp(15)
                Image:
                    keep_ratio: False
                    allow_stretch: True
                    source: "chess_cropped.png"
            HalfBoard:
                id: top_board
                # Top board
                size_hint: 1, .46
                pos_hint: {"top": 1}
            HalfBoard:
                # Bottom board
                id: bottom_board
                size_hint: 1, .46
                pos_hint: {"top": .46}

        Widget:
            canvas.before:
                Color:
                    rgba: 1,0,0,.2
                Rectangle:
                    size: self.size
                    pos: self.pos