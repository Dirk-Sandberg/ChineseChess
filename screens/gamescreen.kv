#:import Clock kivy.clock.Clock

<GameScreen>:
    on_enter:
        top_board.add_starting_pieces()
        bottom_board.add_starting_pieces()
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            id: captured_black_pieces
            rows: 1
        FloatLayout:
            size_hint: 1, None
            height: self.width
            pos_hint: {"center_y": .5, "center_x": .5}
            BoxLayout:
                pos_hint: {"center_x": .5, "center_y": .5}
                padding: dp(15)
                Image:
                    keep_ratio: False
                    allow_stretch: True
                    source: "images/chess_cropped.png"
            HalfBoard:
                id: top_board
                # Top board
                size_hint: 1, .46
                pos_hint: {"top": 1}
                half: "top"
            HalfBoard:
                # Bottom board
                half: "bottom"
                id: bottom_board
                size_hint: 1, .46
                pos_hint: {"top": .46}
                player_color: "red"
        GridLayout:
            id: captured_red_pieces
            rows: 1
