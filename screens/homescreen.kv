<CardButton@ButtonBehavior+MDCard>:
    background: 'images/pieces.jpg'
    text: ""
    border_radius: dp(15)
    on_press:
        self.elevation = 10
    on_release:
        self.elevation = 6
    MDLabel:
        color: 1,1,1,1
        size: root.size
        pos: root.pos
        halign: 'center'
        valign: 'top'
        text: root.text

<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        Widget:
        CardButton:
            size_hint: .6, None
            height: self.width
            pos_hint: {"center_x": .5, "center_y": .75}
            text: "Host Match"
            on_release:
                root.manager.current = 'create_game_screen'
        Widget:
        CardButton:
            size_hint: .6, None
            height: self.width
            pos_hint: {"center_x": .5, "center_y": .25}
            text: "Join Match"
            on_release:
                root.manager.current = 'lobby_browser_screen'
        Widget:
