<SetNicknameScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(20)
        MDToolbar:
            title: "Choose your username"
            md_bg_color: get_color_from_hex(colors['Light']['Background'])
            elevation: 0
            specific_text_color: [0,0,0,1]
        MDTextField:
            size_hint_x: .9
            pos_hint: {'center_x': .5}
            id: nickname
        MDRaisedButton:
            text: 'Set'
            pos_hint: {"center_x": .5}
            on_release:
                root.set_nickname(nickname.text)
        Widget:
