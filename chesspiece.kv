<ChessPiece>:
    source: "redpiece.png"
    keep_ratio: False
    allow_stretch: True
    player: "black"
    color: (1,1,1,1) if self.player == "black" else (1,0,0,1)
    source: "images/%spiece.png"%self.piece_type
    on_release:
        print("pressed", self.player, self.piece_type)
        self.highlight_moves()
